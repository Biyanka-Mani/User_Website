
<div class="container mt-5 "> 
    <h1 class="text-center">Connect Us </h1>
    <div class="mx-auto">
        <div class="row justify-content-center mt-3 ">
            <div class="col-10">
                <%= form_with scope: :enquiry ,url: enquiries_path , local: true,class:"container shadow row g-3 bg-black rounded mt-2" do |f| %>
                    <div class="col-md-6">
                        <%= f.label :name ,class:"form-label text-white"%>
                        <%= f.text_field :name,class:"form-control shadow p-3 bg-body-tertiary rounded",placeholder:"Enter Firstname" %>
                        <% @enquiry.errors.full_messages_for(:name).each do |message| %>
                            <div class="text-white"><%= message %></div> 
                        <% end %> 
                    </div>
                    
                    <div class="col-md-6">
                        <%= f.label :email ,class:"form-label text-white"%>
                        <%= f.email_field :email,class:"form-control shadow p-3 bg-body-tertiary rounded",placeholder:"Enter Your Email" %>
                        <% @enquiry.errors.full_messages_for(:email).each do |message| %>
                            <div class="text-white"><%= message %></div> 
                        <% end %> 
                    </div>
                    
                    <div class="col-12">
                        <%= f.label :subject,class:"form-label text-white"%>
                        <%= f.text_field :subject,class:"form-control shadow p-3 bg-body-tertiary rounded",placeholder:"Enter Subject" %>
                        <% @enquiry.errors.full_messages_for(:subject).each do |message| %>
                            <div class="text-white"><%= message %></div> 
                        <% end %>
                    </div>
                    <div class="col-12">
                        <%= f.label :meassage,class:"form-label text-white"%>
                        <%= f.text_area :meassage,class:"form-control shadow p-3 bg-body-tertiary rounded",placeholder:"Enter Message Here" %>
                        <% @enquiry.errors.full_messages_for(:meassage).each do |message| %>
                            <div class="text-white"><%= message %></div> 
                        <% end %>
                    </div>
                    <div class="form-group  text-center mt-3">
                        <%= f.submit class:"btn btn-outline-primary btn-lg my-6 text-white mb-3 " %>
                    </div> 
                <% end %>
            </div>
            <div class="mb-3">
                
            </div>
        </div>
        
    </div>
</div>
